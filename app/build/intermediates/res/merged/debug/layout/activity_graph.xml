                android:gravity="center"
                android:button="@null"
                android:textColor="@color/radio_colors"
                android:text="Month"
                android:textSize="20sp"
                android:layout_weight="1"/>

        </com.example.android.timemanagement.activities.SegmentedRadioGroup>

